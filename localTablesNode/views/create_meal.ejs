    <body>
        <div class="row" style="margin-top:-59px;">
            <div class="col">
              <i id="back_button" onclick="history.back(-1)" class="fa fa-angle-left" style="font-size:48px;color:white;position:absolute;top:0%;left:4%;z-index:1"></i>
              <input id="upload" type="file" onchange="readURL(this);" />
              <a href="" class="thumbnail" id="img">
                <img id= "my_img" src="http://pic2.pbsrc.com/common/FB_OG_default_600x315.jpg" alt="Upload Image">
              </a>
            </div>
        </div>



        <div id="container" style="margin-left:5%;margin-right:5%">
            <form>
              <div class="form-group">
                <label for="dish_name">Dish Name</label>
                <input type="text" class="form-control" id="dish_name" placeholder="Name Your Meal">
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" rows="3" id="description" placeholder="Describe your meal"></textarea>
              </div>
              <div class="form-group">
                <label for="location">Location</label>
                <input type="text" class="form-control" id="location" placeholder="">
              </div>
              <div class="form-group">
                <label for="plusminus">Party Size</label>
                <div class="input-group" id="plusminus">
                  <span class="input-group-btn">
                      <button type="button" class="btn btn-danger btn-number"  data-type="minus" data-field="quant[2]">
                        <span class="glyphicon glyphicon-minus"></span>
                      </button>
                  </span>
                  <input id="party_size" type="text" name="quant[2]" class="form-control input-number" value="2" min="1" max="100">
                  <span class="input-group-btn">
                      <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                          <span class="glyphicon glyphicon-plus"></span>
                      </button>
                  </span>
                </div>
              </div>
              <div class="form-group">
                  <label for="amount">Price</label>
                  <div class="input-group">
                    <div class="input-group-addon">$</div>
                    <input type="text" onkeypress='return event.charCode >= 46 && event.charCode <= 57' class="form-control" id="amount">
                  </div>
              </div>
              <div class="checkbox">
                  <label>
                    <input id="lessons" type="checkbox"> Check this to provide cooking lessons
                  </label>
              </div>
              <a>
                <button id="confirm" style="border-radius:20px;" type="button" class="btn btn-success btn-lg btn-block">Confirm</button>
              </a>
            </form>

            <div id="alert" style="position: fixed;top: 0;left: 0;width: 100%;" class="alert alert-success alert-block alert-dismissible fade" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true" style="position: absolute;right: 28px;">&times;</span></button>
              <strong>&nbsp;&nbsp;&nbsp;&nbsp;Success!!</strong>Your Meal Has Been Created!
            </div>

        </div>

